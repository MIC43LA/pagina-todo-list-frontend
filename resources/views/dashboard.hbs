<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="public/styles/index.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <h1>TaskMate</h1>
    </header>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 sidebar">
                <h2>Menú</h2>
                <ul>
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Tareas Pendientes</a></li>
                    <li><a href="#">Tareas Completadas</a></li>
                    <li><a href="#">Perfil</a></li>
                </ul>
            </div>
            <div class="col-10 main-content">
                <div class="task-summary text-center mb-4">
                    <span>Total: <strong>5</strong></span> |
                    <span>En progreso: <strong>2</strong></span> |
                    <span>Terminadas: <strong>3</strong></span>
                </div>
                <h2>Mis tareas</h2>
                <div class="filter-buttons mb-3">
                    <button class="btn btn-light">Inbox</button>
                    <button class="btn btn-primary">Pendientes</button>
                    <button class="btn btn-light">En espera</button>
                    <button class="btn btn-light">Completas</button>
                    <button class="btn btn-light">Archivadas</button>
                </div>
                <div class="row">
                    <div class="col-md-4 task-card">
                        <h5>Tarea</h5>
                        <p>Descripción</p>
                        <button class="btn btn-edit">Etiqueta</button>
                    </div>
                </div>
                <!-- Botón flotante para abrir el modal -->
                <button class="btn-floating" data-bs-toggle="modal" data-bs-target="#addTaskModal">+</button>
            </div>
        </div>
    </div>

    <!-- Modal para agregar tarea -->
    <div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="addTaskModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTaskModalLabel">Tarea nueva</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="titulo" class="form-label">Título</label>
                            <input type="text" class="form-control" id="titulo" placeholder="Ingrese título">
                        </div>
                        <div class="mb-3">
                            <label for="descripcion" class="form-label">Descripción</label>
                            <textarea class="form-control" id="descripcion" rows="3" placeholder="Descripción breve"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="prioridad" class="form-label">Prioridad</label>
                            <select class="form-select" id="prioridad">
                                <option value="alta">Alta</option>
                                <option value="media">Media</option>
                                <option value="baja">Baja</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="../public/dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>